<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Knowledge Consolidator V2 | Power User Interface</title>
    
    <!-- Core CSS -->
    <link rel="stylesheet" href="./css/variables.css">
    <link rel="stylesheet" href="./css/base.css">
    <link rel="stylesheet" href="./css/layout.css">
    <link rel="stylesheet" href="./css/components.css">
    <link rel="stylesheet" href="./css/animations.css">
    <link rel="stylesheet" href="./css/themes.css">
    
    <!-- Enhanced UI CSS (Agent 3) -->
    <link rel="stylesheet" href="./css/responsive-layout.css">
    <link rel="stylesheet" href="./css/keyboard-navigation.css">
    
    <!-- Test Data Generator CSS -->
    <link rel="stylesheet" href="./css/test-data-generator.css">
    
    <!-- Filter Panel CSS -->
    <link rel="stylesheet" href="./css/filter-panel.css">
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="theme-dark">
    <!-- Command Palette -->
    <div id="command-palette" class="command-palette hidden">
        <div class="command-input-wrapper">
            <span class="command-prompt">></span>
            <input type="text" id="command-input" class="command-input" placeholder="Digite um comando ou pesquise..." autocomplete="off">
        </div>
        <div id="command-results" class="command-results"></div>
    </div>

    <!-- Main Layout -->
    <div class="app-container">
        <!-- Status Bar (Top) -->
        <header class="status-bar">
            <div class="status-left">
                <span class="status-item">KC V2</span>
                <span class="status-separator">|</span>
                <span id="status-mode" class="status-item">DISCOVERY</span>
                <span class="status-separator">|</span>
                <span id="status-files" class="status-item">0 arquivos</span>
            </div>
            <div class="status-center">
                <span id="status-message" class="status-message"></span>
            </div>
            <div class="status-right">
                <span id="status-api" class="status-item status-api">
                    <span class="status-indicator"></span>
                    API
                </span>
                <span class="status-separator">|</span>
                <span id="status-qdrant" class="status-item">
                    <span class="status-indicator"></span>
                    Qdrant
                </span>
                <span class="status-separator">|</span>
                <span id="status-time" class="status-item">00:00</span>
            </div>
        </header>

        <!-- Main Content Area -->
        <main class="main-content">
            <!-- Sidebar -->
            <aside class="sidebar">
                <nav class="nav-menu">
                    <div class="nav-section">
                        <h3 class="nav-title">WORKFLOW</h3>
                        <ul class="nav-list">
                            <li class="nav-item active" data-view="discovery">
                                <span class="nav-icon">üîç</span>
                                <span class="nav-label">Discovery</span>
                                <span class="nav-shortcut">Ctrl+1</span>
                            </li>
                            <li class="nav-item" data-view="analysis">
                                <span class="nav-icon">üß†</span>
                                <span class="nav-label">Analysis</span>
                                <span class="nav-shortcut">Ctrl+2</span>
                            </li>
                            <li class="nav-item" data-view="organization">
                                <span class="nav-icon">üìÇ</span>
                                <span class="nav-label">Organization</span>
                                <span class="nav-shortcut">Ctrl+3</span>
                            </li>
                            <li class="nav-item" data-view="export">
                                <span class="nav-icon">üì§</span>
                                <span class="nav-label">Export</span>
                                <span class="nav-shortcut">Ctrl+4</span>
                            </li>
                        </ul>
                    </div>
                    
                    <div class="nav-section">
                        <h3 class="nav-title">TOOLS</h3>
                        <ul class="nav-list">
                            <li class="nav-item" data-view="settings">
                                <span class="nav-icon">‚öôÔ∏è</span>
                                <span class="nav-label">Settings</span>
                                <span class="nav-shortcut">Ctrl+,</span>
                            </li>
                            <li class="nav-item" data-view="logs">
                                <span class="nav-icon">üìã</span>
                                <span class="nav-label">Logs</span>
                                <span class="nav-shortcut">Ctrl+L</span>
                            </li>
                            <li class="nav-item" data-view="stats">
                                <span class="nav-icon">üìä</span>
                                <span class="nav-label">Statistics</span>
                                <span class="nav-shortcut">Ctrl+S</span>
                            </li>
                        </ul>
                    </div>
                </nav>
            </aside>

            <!-- Content Area with File Preview -->
            <div class="content-wrapper">
                <!-- Main Content Area -->
                <div class="content-area">
                    <!-- Views will be loaded here dynamically -->
                    <div id="view-container" class="view-container">
                        <!-- Discovery View (Default) -->
                        <div id="discovery-view" class="view active">
                        <div class="view-header">
                            <h2 class="view-title">File Discovery</h2>
                            <div class="view-actions">
                                <button class="btn btn-primary" id="btn-select-directory">
                                    Select Directory
                                </button>
                                <button class="btn btn-secondary" id="btn-scan-options">
                                    Scan Options
                                </button>
                            </div>
                        </div>
                        <div class="view-content">
                            <div class="discovery-panel">
                                <div class="config-section">
                                    <h3>Directory Management</h3>
                                    <div class="directory-config">
                                        <label>Target Directories:</label>
                                        <textarea id="directory-paths" class="directory-textarea" placeholder="Enter directory paths, one per line..." rows="4"></textarea>
                                        <div class="directory-actions">
                                            <button class="btn btn-small" id="btn-locate-folder">Locate Folder</button>
                                            <button class="btn btn-small" id="btn-add-locations">Add Locations</button>
                                            <button class="btn btn-small btn-danger" id="btn-reset-dirs">Reset</button>
                                        </div>
                                        <div class="directory-list" id="directory-list">
                                            <!-- Added directories will be shown here -->
                                        </div>
                                    </div>
                                    
                                    <h3>Pattern Configuration</h3>
                                    <div class="pattern-config">
                                        <div class="pattern-section">
                                            <label>Include Patterns:</label>
                                            <div class="pattern-chips">
                                                <span class="pattern-chip active" data-pattern="*.md">*.md</span>
                                                <span class="pattern-chip active" data-pattern="*.txt">*.txt</span>
                                                <span class="pattern-chip" data-pattern="*.docx">*.docx</span>
                                                <span class="pattern-chip" data-pattern="*.pdf">*.pdf</span>
                                                <span class="pattern-chip" data-pattern="*.gdoc">*.gdoc</span>
                                            </div>
                                            <input type="text" id="custom-include-pattern" class="pattern-input" placeholder="Add custom pattern...">
                                        </div>
                                        
                                        <div class="pattern-section">
                                            <label>Exclude Patterns:</label>
                                            <textarea id="exclude-patterns" class="pattern-textarea" placeholder="Enter exclusion patterns, one per line...
.git/
node_modules/
*.tmp
*.cache" rows="4"></textarea>
                                            <button class="btn btn-small btn-primary" id="btn-apply-exclusions">Apply Exclusions</button>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="results-section">
                                    <div class="results-header">
                                        <h3>Discovered Files</h3>
                                        <div class="results-stats">
                                            <span id="total-files">0 files</span>
                                            <span class="separator">|</span>
                                            <span id="filtered-files">0 filtered</span>
                                        </div>
                                    </div>
                                    
                                    <!-- Filter Panel Container -->
                                    <div id="filter-panel-container"></div>
                                    
                                    <div class="file-list" id="discovered-files">
                                        <!-- Files will be displayed here as a list -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Analysis View -->
                    <div id="analysis-view" class="view">
                        <!-- Content will be dynamically generated by AnalysisView.js -->
                    </div>

                    <!-- Organization View -->
                    <div id="organization-view" class="view">
                        <!-- Content will be dynamically generated by OrganizationView.js -->
                    </div>

                    <!-- Export View -->
                    <div id="export-view" class="view">
                        <!-- Content will be dynamically generated by ExportView.js -->
                    </div>

                    <!-- Settings View -->
                    <div id="settings-view" class="view">
                        <!-- Content will be dynamically generated by SettingsView.js -->
                    </div>

                    <!-- Logs View -->
                    <div id="logs-view" class="view">
                        <!-- Content will be dynamically generated by LogsView.js -->
                    </div>

                    <!-- Stats View -->
                    <div id="stats-view" class="view">
                        <!-- Content will be dynamically generated by StatsView.js -->
                    </div>
                    </div>
                </div>
                
                <!-- File Preview Panel (Right) -->
                <aside class="file-preview-panel">
                    <div class="preview-header">
                        <h3 class="preview-title">File Preview</h3>
                        <div class="preview-info">
                            <span id="preview-filename" class="preview-filename">No file selected</span>
                            <span id="preview-size" class="preview-size"></span>
                        </div>
                    </div>
                    <div class="preview-content" id="preview-content">
                        <div class="preview-placeholder">
                            <p>Select a file to preview its content</p>
                            <p class="preview-hint">Click on any file in the discovery results to see its content here</p>
                        </div>
                    </div>
                </aside>
            </div>
        </main>
    </div>

    <!-- Modals will be inserted here -->
    <div id="modal-container"></div>

    <!-- Core JavaScript -->
    <script type="module" src="./js/app.js"></script>
</body>
</html>