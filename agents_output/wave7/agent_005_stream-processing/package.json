{
  "name": "@kc/stream-ml-confidence",
  "version": "1.0.0",
  "description": "Real-time stream processing ML confidence system for Knowledge Consolidator",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:performance": "jest tests/performance",
    "test:watch": "jest --watch",
    "benchmark": "node benchmarks/streaming-performance.js",
    "benchmark:latency": "node benchmarks/latency-test.js",
    "benchmark:throughput": "node benchmarks/throughput-test.js",
    "lint": "eslint src tests benchmarks",
    "lint:fix": "eslint src tests benchmarks --fix"
  },
  "keywords": [
    "ml",
    "confidence",
    "streaming",
    "real-time",
    "event-sourcing",
    "sliding-windows",
    "online-learning"
  ],
  "author": "Agent 005 - Stream Processing Specialist",
  "license": "MIT",
  "dependencies": {
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0"
  },
  "optionalDependencies": {
    "kafkajs": "^2.2.4",
    "ioredis": "^5.3.2",
    "@tensorflow/tfjs": "^4.17.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}