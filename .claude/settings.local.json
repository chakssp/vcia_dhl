{
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cd:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(touch:*)",
      "Bash(mkdir:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(curl:*)",
      "Bash(playwright:*)",
      "Bash(http-server:*)",
      "Bash(prettier:*)",
      "Bash(eslint:*)",
      "Bash(http:*)",
      "Bash(http-server:*)",
      "mcp__ide__getDiagnostics",
      "Bash(echo:*)",
      "Bash(mv:*)",
      "Bash(rm:*)"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": false,
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/tool ./run-playwright-mcp.sh.navigate http://127.0.0.1:5500"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/tool ./run-playwright-mcp.sh.navigate http://localhost:8080"
          }
        ]
      }
    ]
  }
}